{
  "compilerOptions": {
    /* Folder structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Compile for the browser */
    "target": "es6",
    "module": "es6",
    "lib": ["dom", "es6"],

    /* TypeScript strictness */
    "strict": true,
    "noImplicitAny": true,

    /* Simplify output */
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
